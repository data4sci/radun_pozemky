---
import { t, formatPrice, offerPathSegment, type Language } from '../utils/i18n';
import type { Offer } from '../utils/offers';

interface Props {
  offer: Offer;
  lang: Language;
}

const { offer, lang } = Astro.props;

const statusBadge = () => {
  switch (offer.status) {
    case 'discounted':
      return {
        text: `${t('status.discounted', lang)} -${offer.discount.percentage}%`,
        class: 'badge-discount'
      };
    case 'reserved':
      return {
        text: t('status.reserved', lang),
        class: 'badge-reserved'
      };
    case 'inactive':
      return {
        text: t('status.inactive', lang),
        class: 'badge-sold'
      };
    default:
      return null;
  }
};

const badge = statusBadge();
const detailUrl = `/${lang}/${offerPathSegment[lang]}/${offer.slug[lang]}/`;
const isReservedOrInactive = offer.status === 'reserved' || offer.status === 'inactive';
---

<article class={`card ${isReservedOrInactive ? 'opacity-75' : ''}`}>
  <!-- Image -->
  <div class="relative h-48 bg-gray-200 dark:bg-gray-700">
    {offer.images[0] ? (
      <img
        src={offer.images[0]}
        alt={offer.title[lang]}
        class="w-full h-full object-cover"
        loading="lazy"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center text-gray-400">
        <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    )}

    {badge && (
      <div class={`absolute top-3 right-3 badge ${badge.class}`}>
        {badge.text}
      </div>
    )}
  </div>

  <!-- Content -->
  <div class="p-5">
    <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white">
      {offer.title[lang]}
    </h3>

    <div class="space-y-2 text-sm text-gray-600 dark:text-gray-400 mb-4">
      <div class="flex justify-between">
        <span>{t('offer.size', lang)}:</span>
        <span class="font-medium">{offer.size_sqm.toLocaleString('cs-CZ')} mÂ²</span>
      </div>
      <div class="flex justify-between">
        <span>{t('offer.price_per_sqm', lang)}:</span>
        <span class="font-medium">{formatPrice(offer.price_per_sqm, lang)}</span>
      </div>
    </div>

    <!-- Price -->
    <div class="mb-4">
      {offer.discount.active && offer.discount.old_price_total ? (
        <div>
          <span class="text-gray-500 line-through text-sm">
            {formatPrice(offer.discount.old_price_total, lang)}
          </span>
          <div class="text-xl font-bold text-red-600 dark:text-red-400">
            {formatPrice(offer.price_total, lang)}
          </div>
        </div>
      ) : (
        <div class="text-xl font-bold text-primary dark:text-primary-dark">
          {formatPrice(offer.price_total, lang)}
        </div>
      )}
    </div>

    <!-- CTA -->
    <a
      href={detailUrl}
      class="block w-full text-center btn-secondary"
    >
      {t('offer.view_details', lang)}
    </a>
  </div>
</article>
