---
import { t, formatPrice, offerPathSegment, type Language } from '../utils/i18n';
import type { Offer } from '../utils/offers';
import Badge from './Badge.astro';

interface Props {
  offer: Offer;
  lang: Language;
}

const { offer, lang } = Astro.props;

const statusBadge = () => {
  switch (offer.status) {
    case 'discounted':
      return {
        text: `${t('status.discounted', lang)} -${offer.discount.percentage}%`,
        variant: 'discount' as const
      };
    case 'reserved':
      return {
        text: t('status.reserved', lang),
        variant: 'reserved' as const
      };
    case 'inactive':
      return {
        text: t('status.inactive', lang),
        variant: 'sold' as const
      };
    default:
      return null;
  }
};

const badge = statusBadge();
const detailUrl = `/${lang}/${offerPathSegment[lang]}/${offer.slug[lang]}/`;
const isReservedOrInactive = offer.status === 'reserved' || offer.status === 'inactive';
---

<a
  href={detailUrl}
  class:list={[
    'card card-hover group block cursor-pointer',
    isReservedOrInactive && 'opacity-60'
  ]}
>
  <!-- Image -->
  <div class="relative aspect-[4/3] bg-gray-100 dark:bg-gray-800 overflow-hidden">
    {offer.images[0] ? (
      <img
        src={offer.images[0]}
        alt={offer.title[lang]}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
        loading="lazy"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center text-gray-400">
        <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    )}

    {badge && (
      <div class="absolute top-4 right-4">
        <Badge variant={badge.variant}>
          {badge.text}
        </Badge>
      </div>
    )}

    <!-- Overlay gradient -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  </div>

  <!-- Content -->
  <div class="p-6">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 line-clamp-2">
      {offer.title[lang]}
    </h3>

    <!-- Stats -->
    <div class="space-y-3 mb-6">
      <div class="flex items-center justify-between text-sm">
        <span class="text-gray-600 dark:text-gray-400 flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
          </svg>
          {t('offer.plot_id', lang)}
        </span>
        <span class="font-semibold text-gray-900 dark:text-white">
          {offer.id}
        </span>
      </div>

      <div class="flex items-center justify-between text-sm">
        <span class="text-gray-600 dark:text-gray-400 flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4" />
          </svg>
          {t('offer.size', lang)}
        </span>
        <span class="font-semibold text-gray-900 dark:text-white">
          {offer.size_sqm.toLocaleString('cs-CZ')} mÂ²
        </span>
      </div>

      <div class="flex items-center justify-between text-sm">
        <span class="text-gray-600 dark:text-gray-400 flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
          </svg>
          {t('offer.price_per_sqm', lang)}
        </span>
        {offer.discount.active && offer.discount.old_price_per_sqm ? (
          <span class="text-right">
            <span class="text-gray-400 line-through text-xs block">
              {formatPrice(offer.discount.old_price_per_sqm, lang)}
            </span>
            <span class="font-semibold text-red-600 dark:text-red-400">
              {formatPrice(offer.price_per_sqm, lang)}
            </span>
          </span>
        ) : (
          <span class="font-semibold text-gray-900 dark:text-white">
            {formatPrice(offer.price_per_sqm, lang)}
          </span>
        )}
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-gray-200 dark:border-gray-700 my-4"></div>

    <!-- Price -->
    <div>
      <div class="text-xs uppercase tracking-wider text-gray-500 dark:text-gray-400 mb-1">
        {t('offer.total_price', lang)}
      </div>
      {offer.discount.active && offer.discount.old_price_total ? (
        <div>
          <span class="text-gray-400 line-through text-sm block">
            {formatPrice(offer.discount.old_price_total, lang)}
          </span>
          <div class="text-2xl font-bold text-red-600 dark:text-red-400">
            {formatPrice(offer.price_total, lang)}
          </div>
        </div>
      ) : (
        <div class="text-2xl font-bold text-primary-600 dark:text-primary-400">
          {formatPrice(offer.price_total, lang)}
        </div>
      )}
    </div>
  </div>
</a>
