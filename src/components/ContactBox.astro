---
import { t, loadContacts, type Language } from '../utils/i18n';

interface Props {
  lang: Language;
  contactId?: string;
}

const { lang, contactId = 'default' } = Astro.props;
const contacts = loadContacts();
const contact = contacts.contacts[contactId] || contacts.contacts.default;
---

<div class="bg-primary/10 dark:bg-primary-dark/10 rounded-xl p-6">
  <h3 class="text-xl font-semibold mb-4 text-primary dark:text-primary-dark">
    {t('nav.contact', lang)}
  </h3>

  <div class="space-y-3">
    <div>
      <div class="font-semibold text-gray-900 dark:text-white">{contact.name}</div>
      {contact.company && (
        <div class="text-sm text-gray-600 dark:text-gray-400">{contact.company}</div>
      )}
      {contact.role && (
        <div class="text-sm text-gray-600 dark:text-gray-400">
          {typeof contact.role === 'object' ? contact.role[lang] : contact.role}
        </div>
      )}
    </div>

    <div class="space-y-2">
      <a
        href={`tel:${contact.phone.replace(/\s/g, '')}`}
        class="flex items-center space-x-2 text-gray-700 dark:text-gray-300 hover:text-primary dark:hover:text-primary-dark transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        <span>{contact.phone}</span>
      </a>

      <a
        href={`mailto:${contact.email}`}
        class="flex items-center space-x-2 text-gray-700 dark:text-gray-300 hover:text-primary dark:hover:text-primary-dark transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        <span>{contact.email}</span>
      </a>
    </div>
  </div>
</div>
