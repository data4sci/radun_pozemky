---
import { t, type Language } from "../utils/i18n";

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer
  class="bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800"
>
  <div class="container-wide py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand -->
      <div>
        <div class="flex items-center gap-2 mb-4">
          <div
            class="w-8 h-8 bg-primary-600 rounded-lg flex items-center justify-center"
          >
            <svg
              class="w-5 h-5 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
              ></path>
            </svg>
          </div>
          <span class="text-lg font-bold text-gray-900 dark:text-white">
            Pozemky Raduň
          </span>
        </div>
        <p class="text-sm text-gray-600 dark:text-gray-400 max-w-xs">
          {t("footer.tagline", lang)}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4
          class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4"
        >
          {t("footer.quick_links", lang)}
        </h4>
        <ul class="space-y-3">
          <li>
            <a
              href={`/${lang}/`}
              class="text-sm text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
            >
              {t("nav.home", lang)}
            </a>
          </li>
          <li>
            <a
              href={`/${lang}/#offers`}
              class="text-sm text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
            >
              {t("nav.offers", lang)}
            </a>
          </li>
          <li>
            <a
              href={`/${lang}/#about`}
              class="text-sm text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
            >
              {t("general.about_village", lang)}
            </a>
          </li>
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h4
          class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4"
        >
          {t("footer.resources", lang)}
        </h4>
        <ul class="space-y-3">
          <li>
            <a
              href="/sitemap-index.xml"
              class="text-sm text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
            >
              Sitemap
            </a>
          </li>
          <li>
            <a
              href="/llms.txt"
              class="text-sm text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
            >
              LLMs.txt
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-800">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-gray-500 dark:text-gray-400">
          &copy; {currentYear} Pozemky Raduň. {t("footer.all_rights_reserved", lang)}
        </p>
        <div
          class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400"
        >
          <span class="flex items-center gap-1">
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            {t("footer.location", lang)}
          </span>
        </div>
      </div>
    </div>
  </div>
</footer>
