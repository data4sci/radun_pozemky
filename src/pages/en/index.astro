---
import Layout from '../../components/Layout.astro';
import OfferCard from '../../components/OfferCard.astro';
import ContactBox from '../../components/ContactBox.astro';
import { t, loadGlobalConfig, type Language } from '../../utils/i18n';
import { getActiveOffers } from '../../utils/offers';

const lang: Language = 'en';
const global = loadGlobalConfig();
const offers = getActiveOffers();
---

<Layout lang={lang}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary/10 to-primary/5 dark:from-gray-800 dark:to-gray-900 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-gray-900 dark:text-white mb-6">
        Pozemky Raduň
      </h1>
      <p class="text-xl md:text-2xl text-gray-700 dark:text-gray-300 mb-8">
        {global.site.hero_claim[lang]}
      </p>
      <a href="#offers" class="btn-primary text-lg">
        {t('general.cta_view_offers', lang)}
      </a>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-gray-100 dark:bg-gray-800 rounded-xl p-4 text-center">
        <img
          id="map-image"
          src={global.map.image}
          alt={global.map.alt[lang]}
          class="max-w-full h-auto mx-auto rounded-lg shadow-md cursor-pointer hover:opacity-90 transition-opacity"
          width={global.map.width}
          height={global.map.height}
          title="Click to enlarge"
        />
        <p class="mt-4 text-sm text-gray-600 dark:text-gray-400">
          {global.map.alt[lang]} <span class="text-xs">(click to enlarge)</span>
        </p>
      </div>
    </div>
  </section>

  <!-- Map Lightbox -->
  <div id="map-lightbox" class="fixed inset-0 bg-black/90 z-50 hidden items-center justify-center p-4">
    <button
      id="map-lightbox-close"
      class="absolute top-4 right-4 text-white hover:text-gray-300 z-10"
      aria-label="Close"
    >
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    <img
      id="map-lightbox-image"
      src={global.map.image}
      alt={global.map.alt[lang]}
      class="max-w-full max-h-full object-contain"
    />
  </div>

  <script>
    const mapImage = document.getElementById('map-image');
    const mapLightbox = document.getElementById('map-lightbox');
    const mapLightboxClose = document.getElementById('map-lightbox-close');

    if (mapImage && mapLightbox && mapLightboxClose) {
      mapImage.addEventListener('click', () => {
        mapLightbox.classList.remove('hidden');
        mapLightbox.classList.add('flex');
        document.body.style.overflow = 'hidden';
      });

      const closeLightbox = () => {
        mapLightbox.classList.add('hidden');
        mapLightbox.classList.remove('flex');
        document.body.style.overflow = '';
      };

      mapLightboxClose.addEventListener('click', closeLightbox);
      mapLightbox.addEventListener('click', (e) => {
        if (e.target === mapLightbox) closeLightbox();
      });

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !mapLightbox.classList.contains('hidden')) {
          closeLightbox();
        }
      });
    }
  </script>

  <!-- About Raduň Section -->
  <section class="py-16 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-serif font-bold text-center mb-8 text-gray-900 dark:text-white">
        {t('general.about_village', lang)}
      </h2>
      <div class="prose prose-lg dark:prose-invert max-w-none text-gray-700 dark:text-gray-300">
        {global.site.about_radun[lang].split('\n').map((paragraph: string) => (
          paragraph.trim() && <p>{paragraph.trim()}</p>
        ))}
      </div>
    </div>
  </section>

  <!-- Offers Section -->
  <section id="offers" class="py-16 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-serif font-bold text-center mb-12 text-gray-900 dark:text-white">
        {t('nav.offers', lang)}
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {offers.map((offer) => (
          <OfferCard offer={offer} lang={lang} />
        ))}
      </div>

      {offers.length === 0 && (
        <div class="text-center py-12 text-gray-500 dark:text-gray-400">
          <p>No active offers available.</p>
        </div>
      )}
    </div>
  </section>

  <!-- Contact Section - HIDDEN, kept for future use
  <section id="contact" class="py-16 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-serif font-bold text-center mb-8 text-gray-900 dark:text-white">
        {t('nav.contact', lang)}
      </h2>
      <ContactBox lang={lang} />
    </div>
  </section>
  -->
</Layout>
