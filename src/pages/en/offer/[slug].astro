---
import Layout from '../../../components/Layout.astro';
import ContactBox from '../../../components/ContactBox.astro';
import { t, formatPrice, type Language } from '../../../utils/i18n';
import { getAllOffers, type Offer } from '../../../utils/offers';

export async function getStaticPaths() {
  const offers = getAllOffers();
  return offers.map((offer) => ({
    params: { slug: offer.slug.en },
    props: { offer }
  }));
}

const lang: Language = 'en';
const { offer } = Astro.props as { offer: Offer };

if (!offer) {
  return Astro.redirect('/en/');
}

const statusBadge = () => {
  switch (offer.status) {
    case 'discounted':
      return {
        text: `${t('status.discounted', lang)} -${offer.discount.percentage}%`,
        class: 'badge-discount'
      };
    case 'reserved':
      return {
        text: t('status.reserved', lang),
        class: 'badge-reserved'
      };
    case 'inactive':
      return {
        text: t('status.inactive', lang),
        class: 'badge-sold'
      };
    default:
      return null;
  }
};

const badge = statusBadge();
---

<Layout
  title={offer.title[lang]}
  description={offer.description[lang].substring(0, 160)}
  lang={lang}
  offerSlugs={offer.slug}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <a
      href={`/${lang}/`}
      class="inline-flex items-center text-primary dark:text-primary-dark hover:underline mb-6"
    >
      {t('nav.back_to_offers', lang)}
    </a>

    {offer.status === 'inactive' && (
      <div class="bg-red-100 dark:bg-red-900/30 border border-red-300 dark:border-red-700 rounded-lg p-4 mb-6">
        <p class="text-red-800 dark:text-red-300 font-semibold">
          {t('offer.not_available', lang)}
        </p>
      </div>
    )}

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2">
        <div class="flex items-start justify-between mb-6">
          <h1 class="text-3xl md:text-4xl font-serif font-bold text-gray-900 dark:text-white">
            {offer.title[lang]}
          </h1>
          {badge && (
            <span class={`badge ${badge.class} text-base`}>
              {badge.text}
            </span>
          )}
        </div>

        <div class="mb-8">
          {offer.images.length > 0 ? (
            <div class="grid grid-cols-1 gap-4">
              <img
                src={offer.images[0]}
                alt={offer.title[lang]}
                class="w-full h-96 object-cover rounded-xl shadow-lg"
              />
              {offer.images.length > 1 && (
                <div class="grid grid-cols-3 gap-4">
                  {offer.images.slice(1).map((img) => (
                    <img
                      src={img}
                      alt={offer.title[lang]}
                      class="w-full h-32 object-cover rounded-lg shadow"
                    />
                  ))}
                </div>
              )}
            </div>
          ) : (
            <div class="w-full h-96 bg-gray-200 dark:bg-gray-700 rounded-xl flex items-center justify-center">
              <svg class="w-24 h-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
          )}
        </div>

        <div class="prose prose-lg dark:prose-invert max-w-none mb-8">
          {offer.description[lang].split('\n').map((paragraph) => (
            paragraph.trim() && <p>{paragraph.trim()}</p>
          ))}
        </div>

        <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6">
          <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">
            {t('features.utilities', lang)}
          </h3>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <h4 class="font-medium text-gray-700 dark:text-gray-300 mb-2">
                {t('features.utilities', lang)}:
              </h4>
              <ul class="space-y-1">
                {offer.features.utilities.map((utility) => (
                  <li class="flex items-center text-gray-600 dark:text-gray-400">
                    <svg class="w-4 h-4 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {t(`features.${utility}`, lang)}
                  </li>
                ))}
              </ul>
            </div>
            <div class="space-y-3">
              <div>
                <span class="font-medium text-gray-700 dark:text-gray-300">
                  {t('features.access', lang)}:
                </span>
                <span class="text-gray-600 dark:text-gray-400 ml-2">
                  {t(`features.${offer.features.access}`, lang)}
                </span>
              </div>
              <div>
                <span class="font-medium text-gray-700 dark:text-gray-300">
                  {t('features.zoning', lang)}:
                </span>
                <span class="text-gray-600 dark:text-gray-400 ml-2">
                  {t(`features.${offer.features.zoning}`, lang)}
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="lg:col-span-1">
        <div class="sticky top-24 space-y-6">
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
            <div class="space-y-4">
              <div class="flex justify-between items-center">
                <span class="text-gray-600 dark:text-gray-400">{t('offer.size', lang)}:</span>
                <span class="font-semibold text-gray-900 dark:text-white">
                  {offer.size_sqm.toLocaleString('cs-CZ')} mÂ²
                </span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-600 dark:text-gray-400">{t('offer.price_per_sqm', lang)}:</span>
                <span class="font-semibold text-gray-900 dark:text-white">
                  {formatPrice(offer.price_per_sqm, lang)}
                </span>
              </div>
              <hr class="dark:border-gray-700" />
              <div>
                <div class="text-gray-600 dark:text-gray-400 mb-2">{t('offer.total_price', lang)}:</div>
                {offer.discount.active && offer.discount.old_price_total ? (
                  <div>
                    <span class="text-gray-500 line-through block">
                      {formatPrice(offer.discount.old_price_total, lang)}
                    </span>
                    <span class="text-3xl font-bold text-red-600 dark:text-red-400">
                      {formatPrice(offer.price_total, lang)}
                    </span>
                  </div>
                ) : (
                  <span class="text-3xl font-bold text-primary dark:text-primary-dark">
                    {formatPrice(offer.price_total, lang)}
                  </span>
                )}
              </div>
            </div>
          </div>

          <ContactBox lang={lang} contactId={offer.contact} />
        </div>
      </div>
    </div>
  </div>
</Layout>
