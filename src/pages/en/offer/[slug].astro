---
import Layout from '../../../components/Layout.astro';
import Section from '../../../components/Section.astro';
import Badge from '../../../components/Badge.astro';
import Button from '../../../components/Button.astro';
import ContactBox from '../../../components/ContactBox.astro';
import ImageGallery from '../../../components/ImageGallery.astro';
import FeatureItem from '../../../components/FeatureItem.astro';
import { t, formatPrice, type Language } from '../../../utils/i18n';
import { getAllOffers, type Offer } from '../../../utils/offers';

export async function getStaticPaths() {
  const offers = getAllOffers();
  return offers.map((offer) => ({
    params: { slug: offer.slug.en },
    props: { offer }
  }));
}

const lang: Language = 'en';
const { offer } = Astro.props as { offer: Offer };

if (!offer) {
  return Astro.redirect('/en/');
}

const statusBadge = () => {
  switch (offer.status) {
    case 'discounted':
      return {
        text: `${t('status.discounted', lang)} -${offer.discount.percentage}%`,
        variant: 'discount' as const
      };
    case 'reserved':
      return {
        text: t('status.reserved', lang),
        variant: 'reserved' as const
      };
    case 'inactive':
      return {
        text: t('status.inactive', lang),
        variant: 'sold' as const
      };
    default:
      return null;
  }
};

const badge = statusBadge();
---

<Layout
  title={offer.title[lang]}
  description={offer.description[lang].substring(0, 160)}
  lang={lang}
  offerSlugs={offer.slug}
>
  <Section background="default" padding="sm">
    <div class="mb-8">
      <a
        href={`/${lang}/`}
        class="inline-flex items-center gap-2 text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        {t('nav.back_to_offers', lang)}
      </a>
    </div>

    {offer.status === 'inactive' && (
      <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl p-4 mb-8">
        <div class="flex items-center gap-3">
          <svg class="w-5 h-5 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <p class="text-red-800 dark:text-red-300 font-medium">
            {t('offer.not_available', lang)}
          </p>
        </div>
      </div>
    )}

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12">
      <!-- Main content -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Title and badge -->
        <div class="flex flex-wrap items-start justify-between gap-4">
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white">
            {offer.title[lang]}
          </h1>
          {badge && (
            <Badge variant={badge.variant}>
              {badge.text}
            </Badge>
          )}
        </div>

        <!-- Gallery -->
        <ImageGallery images={offer.images} alt={offer.title[lang]} />

        <!-- Description -->
        <div class="card p-6 md:p-8">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">{t('detail.description', lang)}</h2>
          <div class="prose prose-lg dark:prose-invert max-w-none text-gray-700 dark:text-gray-300">
            {offer.description[lang].split('\n').map((paragraph) => (
              paragraph.trim() && <p class="mb-4 last:mb-0">{paragraph.trim()}</p>
            ))}
          </div>
        </div>

        <!-- Features -->
        <div class="card p-6 md:p-8">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">
            {t('features.utilities', lang)}
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-4">
              <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                {t('detail.utilities_title', lang)}
              </h3>
              <div class="space-y-3">
                {offer.features.utilities.map((utility) => (
                  <FeatureItem icon="check" label={t(`features.${utility}`, lang)} />
                ))}
              </div>
            </div>
            <div class="space-y-4">
              <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                {t('detail.additional_info', lang)}
              </h3>
              <div class="space-y-3">
                <FeatureItem
                  icon="road"
                  label={t('features.access', lang)}
                  value={t(`features.${offer.features.access}`, lang)}
                />
                <FeatureItem
                  icon="zoning"
                  label={t('features.zoning', lang)}
                  value={t(`features.${offer.features.zoning}`, lang)}
                />
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <div class="sticky top-24 space-y-6">
          <!-- Price box -->
          <div class="card p-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">{t('detail.summary', lang)}</h3>
            <div class="space-y-4">
              <div class="flex justify-between items-center">
                <span class="text-gray-600 dark:text-gray-400">{t('offer.plot_id', lang)}</span>
                <span class="font-semibold text-gray-900 dark:text-white">
                  {offer.id}
                </span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-600 dark:text-gray-400">{t('offer.size', lang)}</span>
                <span class="font-semibold text-gray-900 dark:text-white">
                  {offer.size_sqm.toLocaleString('cs-CZ')} mÂ²
                </span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-600 dark:text-gray-400">{t('offer.price_per_sqm', lang)}</span>
                {offer.discount.active && offer.discount.old_price_per_sqm ? (
                  <span class="text-right">
                    <span class="text-gray-400 line-through text-xs block">
                      {formatPrice(offer.discount.old_price_per_sqm, lang)}
                    </span>
                    <span class="font-semibold text-red-600 dark:text-red-400">
                      {formatPrice(offer.price_per_sqm, lang)}
                    </span>
                  </span>
                ) : (
                  <span class="font-semibold text-gray-900 dark:text-white">
                    {formatPrice(offer.price_per_sqm, lang)}
                  </span>
                )}
              </div>
              <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                <div class="text-sm text-gray-500 dark:text-gray-400 mb-2">{t('offer.total_price', lang)}</div>
                {offer.discount.active && offer.discount.old_price_total ? (
                  <div>
                    <span class="text-gray-400 line-through text-sm block">
                      {formatPrice(offer.discount.old_price_total, lang)}
                    </span>
                    <span class="text-3xl font-bold text-red-600 dark:text-red-400">
                      {formatPrice(offer.price_total, lang)}
                    </span>
                  </div>
                ) : (
                  <span class="text-3xl font-bold text-primary-600 dark:text-primary-400">
                    {formatPrice(offer.price_total, lang)}
                  </span>
                )}
              </div>
            </div>
          </div>

          <!-- Contact box -->
          <ContactBox lang={lang} contactId={offer.contact} />

          <!-- Back button -->
          <Button href={`/${lang}/#offers`} variant="secondary" fullWidth>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            {t('detail.view_more_offers', lang)}
          </Button>
        </div>
      </div>
    </div>
  </Section>
</Layout>
